<div class="container">
<h2>Users</h2>
<a href="/user/new" class="btn btn-sm btn-primary">Create</a>
<hr>
<table class='table table-bordered'>
<tr>
<th>Name</th>
<th>Email</th>
<th>Edit</th>
<th>Delete</th>
</tr>
<% _.each(users, function(user) { %>
<tr data-id="<%= user.id %>" data-model="user">
	<td><%= user.name %></td>
	<td><%= user.email %></td>
	<td align="center"><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Edit</a></td>
	<td align="center">
	<form action="/user/destroy/<%= user.id %>" method="POST">
	<input type="submit" class="btn btn-sm btn-danger" value="Delete" />
	<input type="hidden" name="_csrf" value="<%= _csrf %>">
	</form>
	</td>
</tr>
<% }) %>
</table>
</div>